.text {
  display: flex;
  flex-direction: column;
}

.img {
  width: 100%;
  height: 400rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 150rpx;
  opacity: 0.7;
}

.nav, .title, .detail {
  margin: 0 25rpx;
}

.nav {
  flex-direction: row;
  margin-top: 20rpx;
}

.author, .title {
  font-size: 40rpx;
  font-weight: bold;
}

.const, .time, .author {
  vertical-align: middle;
  margin-left: 20rpx;
}

.author {
  color: #666;
}

.const, .time {
  font-size: 35rpx;
  color: #999;
}

.title {
  margin-top: 30rpx;
  letter-spacing: 2px;
}

.nav-img, .icon-img {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.tool {
  margin-top: 20rpx;
}

.icon-img {
  margin-right: 30rpx;
}

.icon {
  float: right;
  vertical-align: middle;
}

.izon {
  width: 700rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 38rpx;
  margin: 0 auto;
  z-index: -1;
}

.detail {
  color: #666;
  margin-top: 40rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-family: 宋体;
  font-size: 15px;
}
