page {
  height: 100%;
  background: #b3d4db;
}

.content {
  align-items: center;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.img {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

.text, .box-text {
  font-family: MicroSoft Yahei;
  font-weight: bold;
}

.text {
  font-size: 50rpx;
  margin-top: 100rpx;
}

.box {
  border: 1px solid #405f80;
  width: 250rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
  margin-top: 200rpx;
}

.box-text {
  font-size: 40rpx;
  line-height: 80rpx;
  color: #405f80;
}
